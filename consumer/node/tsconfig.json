{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES5"],
    "module": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "removeComments": true,
    "sourceMap": true,
    "noEmit": true,
    "rootDir": "src",
    "outDir": "dist",
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
