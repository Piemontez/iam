{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES5"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "removeComments": true,
    "sourceMap": true,
    "noEmit": true,
    "rootDir": "src",
    "outDir": "dist",
  },
  "include": [
    "src/*"
  ]
}
